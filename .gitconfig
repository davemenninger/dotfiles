[user]
	name = Dave Menninger
[core]
	editor = vim
	trustctime = false
	filemode = false
	excludesfile = ~/.gitignore_global
[color]
	diff = auto
	ui = true
[merge]
	tool = vimdiff
[credential]
	helper = cache
[alias]
	br = branch
	bv = branch -v
	ci = commit
	cl = clone
	co = checkout
	cp = cherry-pick
	dc = diff --cached
	ec = config --global -e
	hist = log --pretty=format:'%Cred%h%Creset %C(bold blue)%ad%Creset | %s%C(yellow)%d%Creset %Cgreen[%an]%Creset' --graph --date=short
	last = log -1 --stat
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative --all
	rv = remote -v
	st = status
	todo2 = !git grep TODO
	todo = !ag TODO
	unstage = reset HEAD --
[include]
	path = ~/.gitconfig_local
[push]
	default = matching
[mergetool]
	keeptemporaries = false
	keepbackups = false
	prompt = false
	trustexitcode = false
[include]
	path = ~/.gitconfiglocal
